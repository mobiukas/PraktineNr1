<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/upper"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/image_viewas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/color1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/bottom"
        android:orientation="horizontal"
        android:text="@string/color5">

        <TextView
            android:id="@+id/buttonRed"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_weight="2"
            android:background="@color/midleft"
            android:text="@string/color2" />

        <TextView
            android:id="@+id/buttonGreen"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_weight="2"
            android:background="@color/midcenter"
            android:text="@string/color3"

            />

        <TextView
            android:id="@+id/buttonBlue"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_weight="2"
            android:background="@color/midright"
            android:text="@string/color4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buttonBackground"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="2" />

    </LinearLayout>

</LinearLayout>
